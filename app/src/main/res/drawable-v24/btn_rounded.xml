<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">

            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"/>


            <solid
                android:color="@color/cool_grey"
                />

            <stroke
                android:color="@color/cool_grey"
                android:width="2dp" />

            <corners
                android:radius="18dp" />
        </shape>
    </item>
</selector>